<h2>会員一覧</h2>

<table>

  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>

    <tr>
      <td>customer.id</td>
      <td><%= link_to customer.name, admin_customers_path(customer.id) %></td>
      <td><%= customer.email %></td>
      <td><%= customer.is_deleted %></td>
    </tr>

    <% end %>
  </tbody>

</table>