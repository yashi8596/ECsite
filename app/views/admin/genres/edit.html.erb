<div class="container">
  <div class="row col-10 mx-auto my-3">
    <h4 class="col-5 text-left">ジャンル編集</h4>
  </div>

  <% if flash[:alert] %>
    <div class="row col-12 bg-danger py-2 mb-3 mx-auto">
      <p id="alert" class="col-6 text-center text-white mx-auto my-0">
        <%= flash[:alert] %>
      </p>
    </div>
  <% end %>

  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>

    <div class="form-group row ">

      <label class="col-2 text-center">ジャンル名</label>
      <%= f.text_field :name, class:"form-control col-3" %>

      <div style="padding:0" class="col-1"></div>
      <%= f.submit '変更を保存', class:"btn btn-success col-2" %>

    </div>
  <% end %>
</div>