<div class="container">
  <h4 class="col-5">ジャンル一覧・追加</h4>

  <%= form_with model:@genre, url: admin_genres_path, method: :post do |f| %>

    <div class="form-group row">

      <label class="col-2 text-center">ジャンル名</label>
      <%= f.text_field :name, class:"form-control col-3" %>
      <div style="padding:0" class="col-1"></div>
      <%= f.submit '新規登録', class:"btn btn-success col-2" %>

    </div>
  <% end %>


  <div class="row">

    <% if @genres.count == 0 %>

      <%= "ジャンルデータがありません。" %>

    <% else %>
      <div class="col-4">

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th class="text-center"><strong>ジャンル</strong></th>
            </tr>
          </thead>
          <tbody>

          <% @genres.each do |genre| %>
            <tr>
              <td class="text-left"><%= genre.name %></td>
              <td class="text-center">
                <%= link_to edit_admin_genre_path(genre.id) do %>
                  <button type="button" class="btn btn-success">編集する</button>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>

</div>