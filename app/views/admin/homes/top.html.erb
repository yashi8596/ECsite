<div class="container">

  <div class="row mt-4">
    <div class="col-8 row mx-auto">
      <h3 class="col-4 rounded text-center bg-light">注文履歴一覧</h3>
    </div>
  </div>

  <div class="row my-4">
    <div class="col-12">
      <table class="table table-hover">

        <thead>
          <tr class="row table-secondary">
            <th class="col-3">購入日時</th>
            <th class="col-3">購入者</th>
            <th class="col-3">注文個数</th>
            <th class="col-3">注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>

            <tr class="row">
              <td class="col-3"><%= order.created_at %></td>
              <td class="col-3"><%= order.customer.full_name(@last_name, @first_name) %></td>
              <td class="col-3"><%= order.order_detail.amount %></td>
              <td class="col-3"><%= order.order_status %></td>
            </tr>

          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>