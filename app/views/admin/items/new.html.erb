<div class="container">
  <div class="row"><h2 class="col-5 text-center">商品新規登録</h2></div>
  <div class="row">

    <div class="col-3"></div>

    <div class="col-7 mx-auto">
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

        <div class="form-group">
          <label class="col-form-label">商品画像</label>
          <div class="col-10">
            <%= f.file_field :item_image, accept: "image/*", class:"form-control-file" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-form-label">商品名</label>
          <div class="col-10">
            <%= f.text_field :name, class:"form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-form-label">商品説明</label>
          <div class="col-10">
            <%= f.text_area :introduction, size: "400x10", class:"form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-form-label">ジャンル</label>
          <div class="col-10">
            <%= f.text_field :genre_id, class:"form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-form-label">税抜価格</label>
          <div class="col-10">
            <%= f.text_field :price, class:"form-control" %>円
          </div>
        </div>

        <div class="form-group">
          <label class="col-form-label">販売ステータス</label>
            <%= f.radio_button :is_active, 'true' %>
            <%= f.label :is_active, '販売中', value: true %>

            <%= f.radio_button :is_active, 'false' %>
            <%= f.label :is_active, '販売停止中', value: false %>
        </div>

        <%= f.submit '新規登録', class:"btn btn-success" %>

      <% end %>
    </div>

    <div class="col-2"></div>

  </div>
</div>