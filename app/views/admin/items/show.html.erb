<div class="container">
  <h4 class="row text-left">商品詳細</h4>

  <div class="row">
    <div class="col-4">
      <%= image_tag @item.get_item_image(300, 200) %>
    </div>

    <div class="col-6">
      <div class="row">
        <label class="col-4">商品名</label>
        <div class="col-8"><%= @item.name %></div>
      </div>

      <div class="row">
        <label class="col-4">商品説明</label>
        <div class="col-8"><%= @item.introduction %></div>
      </div>

      <div class="row">
        <label class="col-4">ジャンル</label>
        <div class="col-8"><%= @item.genre.name %></div>
      </div>

      <div class="row">
        <label class="col-4">税込価格(税抜価格)</label>
        <div class="col-8"><%= @item.price_inc_tax (@item.price) %>円</div>
      </div>

      <div class="row">
        <label class="col-4">販売ステータス</label>
        <div class="col-8">
          <% if @item.is_active == true %>
            <%= '販売中' %>
          <% else %>
            <%= '販売停止中' %>
          <% end %>
        </div>
      </div>

    </div>

    <div class="col-2"></div>
  </div>

  <%= link_to edit_admin_item_path(@item.id) do %>
    <button type="button" class"btn btn-success">編集する</button>
  <% end %>

</div>

