<h2>注文履歴詳細</h2>

<div>
  <div>購入者</div>
  <%= @order.customer_id.name %>
</div>

<div>
  <div>注文日</div>
  <%= @order.create_at %>
</div>

<div>
  <div>配送先</div>
  <%= @order.address %>
</div>

<div>
  <div>支払方法</div>
  <%= @order.payment_method %>
</div>

<div>
  <div>注文ステータス</div>
  <%= form_with model: @order url: admin_order_path(@order.id), method: :patch do |f| %>
  
    <%= f.select :order_status, Order.order_statuses.keys %>
    <%= f.submit "更新" %>
    
  <% end %>
</div>

<table>

  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>製作ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>

    <tr>
      <td><%= order_detail.item.name %><td>
      <td><%= order_detail.item.price_inc_tax(order_detail.item.price) %></td>
      <td><%= order_detail.amount %></td>
      <td>
        <%= form_with model: @order_detail url: admin_order_detail_path(@order_detail.id), method: :patch do |f| %>
  
          <%= f.select :work_status, Order_detail.work_statuses.keys %>
          <%= f.submit "更新" %>
          
        <% end %>
      </td>
    </tr>

    <% end %>
  </tbody>
  
  <div>
    <div>商品合計</div>
    <% @order_details.each do |order_detail| %>
    
      <% total_price += order_detail.price * 1.1 %>
    
    <% end %>
    <%= total_price %>円
  </div>
  
  <div>
    <div>送料</div>
    <%= @order.shipping_fee %>
  </div>
  
  <div>
    <div>請求金額合計</div>
    <%= @order.total_payment 
  </div>
