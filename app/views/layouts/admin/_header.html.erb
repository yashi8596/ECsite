<header class="container">
  <nav style="padding-top:20px" class="row">
    <div class="col-2"><strong>NAGANO CAKE</strong></div>

    <div class="col-3"></div>

    <div class="col-7 container">
      <ul style="list-style: none;" class="nav-list row">
        <% if admin_signed_in? %>

          <li class="nav-list-item col 1 of 4">
            <%= link_to admin_items_path do %>
              <button type="button" class="btn btn-light">商品一覧</button>
            <% end %>
          </li>

          <li class="nav-list-item col 2 of 4">
            <%= link_to admin_customers_path do %>
              <button type="button" class="btn btn-light">会員一覧</button>
            <% end %>
          </li>

          <li class="nav-list-item col 3 of 4">
            <%= link_to admin_path do %>
              <button type="button" class="btn btn-light">注文履歴一覧</button>
            <% end %>
          </li>

          <li class="nav-list-item col 4 of 4">
            <%= link_to destroy_admin_session_path, method: :delete do %>
              <button type="button" class="btn btn-light">ログアウト</button>
            <% end %>
          </li>

        <% else %>

          <li class="nav-list-item col 1 of 4">
            <%= link_to about_path do %>
              <button type="button" class="btn btn-light">About</button>
            <% end %>
          </li>

          <li class="nav-list-item col 2 of 4">
            <%= link_to items_path do %>
              <button type="button" class="btn btn-light">商品一覧</button>
            <% end %>
          </li>

          <li class="nav-list-item col 3 of 4">
            <%= link_to new_customer_registration_path do %>
              <button type="button" class="btn btn-light">新規登録</button>
            <% end %>
          </li>

          <li class="nav-list-item col 4 of 4">
            <%= link_to new_customer_session_path do %>
              <button type="button" class="btn btn-light">ログイン</button>
            <% end %>
          </li>

        <% end %>
      </ul>
    </div>

  </nav>
</header>