<h4>マイページ</h4>
<div>
  登録情報
  <%= link_to edit_customer_path(@customer.id) do %>
    <button type="button" class="btn btn-success">編集する</button>
  <% end %>
</div>

<table>

  <tr>
    <th>氏名</th>
    <td>
      <%= @customer.last_name %>
      <%= @customer.first_name %>
    </td>
  </tr>
  <tr>
    <th>カナ</th>
    <td>
      <%= @customer.last_name_kana %>
      <%= @customer.first_name_kana %>
    </td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.email %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>

</table>

<div>
  配送先
  <button type="button" class="btn btn-primary">一覧を見る</button>
</div>

<div>
  注文履歴
  <button type="button" class="btn btn-primary">一覧を見る</button>
</div>