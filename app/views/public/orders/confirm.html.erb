  <h4>注文情報確認</h4>
  
  <div>
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
  
      <tbody>
  
        <% @cart_items.each do |cart_item| %>
  
        <tr>
          <td><%= cart_item.name %></td>
          <td><%= cart_item.item.price_inc_tax(:delimited) %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.total_price(:delimited) %></td>
        </tr>
  
        <% end %>
      </tbody>
    </table>
    
    <table>
      <tr>
        <th>送料</th>
        <td><%= @order.shipping_fee %></td>
      </tr>
      <tr>
        <th>合計金額</th>
        <td><%= @total.round.to_s(:delimited) %></td>
      </tr>
      <tr>
        <th>請求金額</th>
        <td><%= @order.total_payment(:delimited) %></td>
      </tr>
    </table>
  </div>
  
  <div>
    <label>支払方法</label>
    <% if @order.payment_method == 0 %>
      <div>クレジットカード</div>
      
    <% elsif @order.payment_method == 1 %>
      <div>銀行振込</div>
    
    <% end %>
  </div>
  
  <div>
    <label>お届け先</label>
    <%= @order.postal_code %>
    <%= @order.address %><br>
    <%= @order.name %>
  </div>
  
  <%= form_with model: @order, url: orders_path, method: :post do |f| %>
    
    <%= f.hidden_field :name %>
    <%= f.hidden_field :postal_code %>
    <%= f.hidden_field :address %>
    <%= f.hidden_field :shipping_fee %>
    <%= f.hidden_field :total_payment %>
    <%- f.hidden_field :payment_method %>
    <%= f.hidden_field :order_status %>
    
    <%= f.submit '注文を確定する', class:"btn btn-success" %>
  
  <% end %>
  