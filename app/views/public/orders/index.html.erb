<div class="container px-0">

  <div class="row col-10 mx-auto my-3">
    <h4 class="col-5 text-left">注文履歴一覧</h4>
  </div>

  <div class="row mb-3 mx-0 px-0">
    <table class="table table-borderd">
      <thead class="table table-secondary">
        <tr>
          <td class="col-2">注文日</td>
          <td class="col-3">配送先</td>
          <td class="col-2">注文商品</td>
          <td class="col-1">支払金額</td>
          <td class="col-2">ステータス</td>
          <td class="col-2">注文詳細</td>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>

          <tr>
            <td class="col-2"><%= order.created_at %></td>
            <td class="col-3">
              <%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td class="col-2">
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td class="col-1"><%= order.total_payment %></td>
            <td class="col-2"><%= order.order_status %></td>
            <td class="col-2">
              <%= link_to order_path(order.id) do %>
                <button type="button" class="btn btn-primary">表示する</button>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>