<h4>注文履歴一覧</h4>

<table>
  <thead>
    <tr>
      <td>注文日</td>
      <td>配送先</td>
      <td>注文商品</td>
      <td>支払金額</td>
      <td>ステータス</td>
      <td>注文詳細</td>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>

      <tr>
        <td><%= order.created_at %></td>
        <td>
          <%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.last_name %>
          <%= order.first_name %>
        </td>
        <td>
          <%= order.@order_details.each do |detail| %>

            <%= detail.item_id.name %>
          <% end %>
        </td>
        <td><%= order.total_payment %></td>
        <td><%= order.order_status %></td>
        <td>
          <%= link_to order_path(order.id) do %>
            <button type="button" class="btn btn-primary">表示する</button>
          <% end %>
        </td>
      </tr>
  </tbody>
</table>