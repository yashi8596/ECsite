<h4>注文履歴詳細</h4>

<div>
  <div>
    <h5>注文情報</h5>
    <table>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          <%= @order.postal_code %><br>
          <%= @order.address %><br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td>
          <% if @order.payment_method == 0 %>
            <%= "クレジットカード" %>
          <% elsif @order.payment_method == 1 %>
            <%= "銀行振込" %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td>
          <% case @order.order_status %>
            <% when 0 %>
              <%= "入金待ち" %>
            <% when 1 %>
              <%= "入金確認" %>
            <% when 2 %>
              <%= "製作中" %>
            <% when 3 %>
              <%= "発送準備中" %>
            <% when 4 %>
              <%= "発送済み" %>
            <% end %>
        </td>
      </tr>
    </table>
  </div>
  
  <div>
    <h5>請求情報</h5>
    <table>
      <tr>
        <th>商品合計</th>
        <td><%= @total(:delimited) %></td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.shipping_fee(:delimited) %></td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%= @order.total_payment(:delimited) %></td>
      </tr>
    </table>
  </div>
</div>

<div>
  <h5>注文内容</h5>
  <table>
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order_details.each do |detail| %>
        <tr>
          <td><%= detail.item.name %></td>
          <td><%= detail.item.price_inc_tax(:delimited) %></td>
          <td><%= detail.amount %></td>
          <td><%= detail.item.sum_of_price(:delimited) </td>
        </tr>
    </tbody>
  </table>
</div>